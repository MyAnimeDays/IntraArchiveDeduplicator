def make_ext(modname, pyxfilename):
	from distutils.extension import Extension
	print("Building extension: ", pyxfilename)
	return Extension(name=modname,
					sources=[pyxfilename],
					libraries=["stdc++"],
					include_dirs = ['.'],
					language='C++',
					extra_compile_args=["-std=c++11"],
					extra_link_args=["-std=c++11"]
					)